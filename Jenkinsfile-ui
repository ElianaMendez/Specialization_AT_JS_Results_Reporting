pipeline {
    agent any

    triggers {
        cron('H */2 * * *')
    }

    stages {
        stage('Install') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Install Playwright') {
            steps {
                sh 'npx playwright install'
            }
        }

        stage('Run UI Tests') {
            steps {
                script {
                    if (params.SHOW_BROWSER) {
                        sh 'npm run test:ui --headed'
                    } else {
                        sh 'npm run test:ui'
                    }
                }
            }
        }

    post {
        always {
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true 
        }
    }
}

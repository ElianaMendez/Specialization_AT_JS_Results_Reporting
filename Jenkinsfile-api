pipeline {
    agent any
    
    triggers {
        cron('H */2 * * *')
    }
    
    environment {
        CI = 'true'
        PATH = "/usr/local/bin:${env.PATH}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm ci'
            }
        }
        
        stage('Install Playwright') {
            steps {
                sh 'npx playwright install chromium'
            }
        }
        
        stage('Run API Tests') {
            steps {
                sh 'npm run test:api'
            }
        }      
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true, allowEmptyArchive: true
        }
    }
}